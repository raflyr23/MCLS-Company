// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum untuk Peran
enum Role {
  USER
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?   // Pastikan ini ada dan opsional
  
  // Field Custom: HARUS OPSIONAL (?) agar Login Google berhasil
  password      String?   
  phone         String?
  address       String?
  
  role          Role      @default(USER)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  pendaftarans  Pendaftaran[]
}



// Model Program (Agar Admin bisa tambah/edit)
model Program {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  imageSrc    String
  description String
  duration    String
  price       Int      @default(0) // TAMBAHAN: Harga Program
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// prisma/schema.prisma

model Pendaftaran {
  id        Int      @id @default(autoincrement())
  program   String
  alamat    String?
  
  // Status Administrasi (Pending -> Approved -> Rejected)
  status    String   @default("Pending") 
  
  // TAMBAHAN: Status Pembayaran & Token Midtrans
  paymentStatus String  @default("Unpaid") // Unpaid, Paid
  snapToken     String? // Token untuk popup pembayaran
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("pendaftaran")
}

// ... (Account, Session, VerificationToken biarkan tetap ada) ...
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

